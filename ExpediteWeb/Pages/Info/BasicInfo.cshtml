@page
@model ExpediteWeb.Pages.Info.BasicInfoModel
@{
    ViewData["Title"] = "BasicInfo";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .clr {
            color: #989898;
        }
        #address {
            width: 625px;
        }
    </style>
</head>
<body>

    <div class="text-center">
        <h3 class="display-4"><b>Alchemative</b></h3>
        <br>
    </div>

    <form method="post" action="">
        <div class="box2">
            <h3>Basic Info</h3><br>

            <input type="text" name="fname" value="" placeholder="First Name" class="email" />
            <input type="text" name="lname" value="" placeholder="Last Name" class="email" />

            <input type="text" name="PhoneNumber" value="" placeholder="Phone Number" class="email" />
            <input type="text" name="gender" value="" placeholder="Gender" class="email" />

            <input type="text" name="dob" value="" placeholder="Date Of Birth" class="email" />
            <input type="text" name="country" value="" placeholder="Country" class="email" />

            <input type="text" name="province" value="" placeholder="State/Province" class="email" />
            <input type="text" name="city" value="" placeholder="City" class="email" />


            <input id="address" type="text" name="address" value="" placeholder="Address" class="email" />
            <br>
            <a asp-page="#"><div class="btn">Continue</div></a>
            <a asp-page="#" class="clr">Skip</a><!-- End Btn -->

        </div> <!-- End Box -->

    </form>
</body>
</html>