@page
@model ExpediteWeb.Pages.Login.authenticationModel
@{
    ViewData["Title"] = "authentication";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        h3 {
            text-align: center;
        }

        .box4 {
            background: #f9f9f9;
            width: 450px;
            border-radius: 2px;
            margin: 0 auto 0 auto;
            padding: 10px 10px 10px 10px;
            border: #e6e6e6 1px solid;
            color: black;
        }

            .box4 .p {
                font-size: 0.8em;
                color: #b9b9b9;
            }
    </style>
</head>
<body>
    <br>
    <br>
    <br>
    <h3>How would you like to recieve your Authentication codes?</h3>
    <br />

    <a asp-page="SignInConfirmation">
        <div class="box4">
            <h3>Text Message</h3>
            <p>
                A six digits verification code was just send to 03001234567
            </p>
        </div>
    </a>
    <br />
    <a asp-page="/SignInConfirmation">
        <div class="box4">
            <h3>Email Message</h3>
            <p>
                A six digits verification code was just send to 03001234567
            </p>
        </div>
    </a>
</body>
</html>